<UserControl x:Class="QuizApp.View.QuizListItem"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:QuizApp.View"
             mc:Ignorable="d">
    <Grid>
        <StackPanel>
            <Label Content="{Binding Name}" Padding="0" />
            <StackPanel Orientation="Horizontal">
                <Label Content="Aantal vragen: " Padding="0" FontSize="9.333"/>
                <Label Content="{Binding Questions.Count}" Padding="0" FontSize="9.333"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</UserControl>
